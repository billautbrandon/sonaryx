generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/dev.db"
}

model Artist {
  id            String   @id // Spotify artist ID
  name          String
  lastReleaseId String?  // Track the last known release
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("artists")
}

model DailyRelease {
  id          Int      @id @default(autoincrement())
  date        String   // YYYY-MM-DD format
  spotifyLink String   // Spotify URL for the release
  artistName  String   // Artist name
  releaseName String   // Release name
  releaseId   String   // Spotify release ID
  releaseType String   // album, single, compilation
  releaseDate String   // Original release date from Spotify
  createdAt   DateTime @default(now())

  @@unique([date, releaseId]) // Prevent duplicate releases for the same date
  @@map("daily_releases")
}
